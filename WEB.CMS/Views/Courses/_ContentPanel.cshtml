<style>


    /* Tiêu đề Câu hỏi */
    .question-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-bottom: 10px;
        border-bottom: 1px solid #ddd;
    }

    .question-title {
        font-weight: bold;
        font-size: 16px;
    }

    /* Nút "Câu hỏi mới" */
    .btn-new-question {
        background: white;
        border: 1px solid #9c27b0;
        color: #9c27b0;
        font-weight: bold;
        padding: 5px 10px;
    }

        .btn-new-question:hover {
            background: #9c27b0;
            color: white;
        }

    /* Nút "Xem trước" */
    .btn-preview {
        background: #673AB7;
        color: white;
        font-weight: bold;
        padding: 5px 10px;
    }

        .btn-preview:hover {
            background: #512DA8;
        }

    /* Phần nội dung câu hỏi */
    .question-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px 0;
        position: relative;
    }

    .item-title {
      
        align-items: center; /* Căn giữa theo chiều dọc */
        gap: 0.4rem; /* Tạo khoảng cách đều giữa các phần tử */
    }

    .question-number,
    .question-description,
    .question-type {
        font-size: 14px;
        color: #333;
    }
        /* Loại bỏ margin của các thẻ <p> bên trong .question-description */
        .question-description p {
            margin: 0;
            padding: 0;
            display: inline; /* Giúp nó nằm ngang */
        }


    /* Hàng icon chỉnh sửa và xóa */
    .action-icons {
        display: flex;
        gap: 10px;
        align-items: center;
        opacity: 0; /* Ẩn icon mặc định */
        transition: opacity 0.3s ease-in-out;
    }

    /* Khi hover vào hàng câu hỏi, hiển thị icon */
    .question-content:hover .action-icons {
        opacity: 1;
    }

    /* Định dạng icon */
    .action-icons a {
        text-decoration: none;
        color: #666;
        font-size: 16px;
        transition: color 0.2s ease-in-out;
    }

        .action-icons a:hover {
            color: black;
        }

    /* Icon kéo thả luôn hiển thị */
    .btn-move-item i {
        font-size: 18px;
        cursor: grab;
        opacity: 1;
    }

   

    /* Hover vào câu hỏi thì icon sửa & xóa xuất hiện */
    .question-content:hover .btn-edit-item i,
    .question-content:hover .btn-delete-item i {
        opacity: 1;
    }
</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js" crossorigin="anonymous"></script>

