@{
    ViewData["Title"] = "Quản lý bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Entities.Models
@{
    var _ListArticleStatus = (List<AllCode>)ViewBag.ListArticleStatus;
    var _ListAuthor = (List<User>)ViewBag.ListAuthor;
    var _StrTreeViewCate = (string)ViewBag.StringTreeViewCate;
}

<section class="main-container clearfix">
    <div class="bg-white pd-16 radius10">
        <div class="flex gap10 flex-lg-nowrap mb-4 justify-between">
            <div class="flex gap10 flex-lg-nowrap">
                <div class="form-group mb-0 w-100" style="max-width: 350px;">
                    <div class="search-wrapper">
                        <input type="text" class="input_search onclick-togle border" id="BasicTitle" placeholder="Nhập tiêu đề khóa học">
                        <span class="search-btn">
                            <button type="button" onclick="_news.BasicSearch()">
                                <svg class="icon-svg">
                                    <use xlink:href="/images/icons/icon.svg#search"></use>
                                </svg>
                            </button>
                        </span>
                    </div>
                </div>
                <a class="btn btn-default white" href="#" onclick="_news.OnOpenAdvanceSearch()">
                    Tìm kiếm nâng cao
                </a>
            </div>
            <a class="btn2 btn-default orange round" href="/courses/detail/0">
                <i class="icofont-plus pr-2"></i> Thêm khóa học
            </a>
        </div>

        <div class="wrap_bg wrap_bg_no-padding mb20">
            <div class="table-responsive mb20">
                <table class="table table-nowrap">
                  
                    <tbody id="grid-data">
                        <!-- Render danh sách bài viết ở đây -->
                    </tbody>
                </table>
            </div>
            <div class="bottom-action flex gap10 justify-content-between mt-3">
                <ul id="pagination" class="pagination">
                    <!-- Render phân trang ở đây -->
                </ul>
                <div class="flex flex-nowrap gap10 align-items-center">
                    <button class="btn btn-default white" style="padding: 0 10px;">
                        <i class="icofont-gear"></i>
                        <span>Tùy chỉnh</span>
                    </button>
                    <div class="select-icon">
                        <select class="select2" name="resultsPerPage">
                            <option value="50">Hiển thị 50 kết quả/trang</option>
                            <option value="100">Hiển thị 100 kết quả/trang</option>
                            <option value="200">Hiển thị 200 kết quả/trang</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script src="~/modules/course/courses.js"></script>
}
